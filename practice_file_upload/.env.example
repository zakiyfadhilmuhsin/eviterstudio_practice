# EviterStudio File Upload - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application environment
NODE_ENV=development

# Application port
PORT=3018

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection string
# Format: postgresql://username:password@hostname:port/database_name?schema=public
DATABASE_URL="postgresql://username:password@localhost:5432/fileupload?schema=public"

# =============================================================================
# DIGITALOCEAN SPACES CONFIGURATION
# =============================================================================

# DigitalOcean Spaces access key
DO_SPACES_KEY="your_spaces_access_key_here"

# DigitalOcean Spaces secret key
DO_SPACES_SECRET="your_spaces_secret_key_here"

# DigitalOcean Spaces endpoint (region-specific)
# Examples:
# - NYC3: https://nyc3.digitaloceanspaces.com
# - AMS3: https://ams3.digitaloceanspaces.com
# - SGP1: https://sgp1.digitaloceanspaces.com
# - SFO3: https://sfo3.digitaloceanspaces.com
DO_SPACES_ENDPOINT="https://nyc3.digitaloceanspaces.com"

# Your DigitalOcean Spaces bucket name
DO_SPACES_BUCKET="your_bucket_name_here"

# DigitalOcean Spaces region
# Must match the region in the endpoint URL
# Examples: nyc3, ams3, sgp1, sfo3
DO_SPACES_REGION="nyc3"

# =============================================================================
# UPLOAD CONFIGURATION (Optional)
# =============================================================================

# Maximum file size in bytes (default: 10MB = 10485760 bytes)
MAX_FILE_SIZE=10485760

# Maximum number of files per upload (default: 10)
MAX_FILES=10

# Allowed MIME types (comma-separated)
ALLOWED_MIME_TYPES="image/*,application/pdf,text/*,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"

# =============================================================================
# SECURITY CONFIGURATION (Optional)
# =============================================================================

# CORS allowed origins (comma-separated)
CORS_ORIGIN="http://localhost:3018"

# Rate limiting (optional)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================

# Log level (error, warn, info, debug, verbose)
LOG_LEVEL=info

# Enable database query logging (true/false)
DATABASE_LOGGING=false