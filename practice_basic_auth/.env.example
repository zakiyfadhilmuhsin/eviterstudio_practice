# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/practice_basic_auth"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here-make-it-long-and-complex"

# OAuth Configuration (Google)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Email Configuration
EMAIL_FROM_NAME="Practice Basic Auth"
EMAIL_FROM_ADDRESS="noreply@practice-basic-auth.com"
FRONTEND_URL="http://localhost:3000"

# SMTP Configuration
# For Development (Ethereal.email - Test Email Service)
NODE_ENV=development
SMTP_HOST=smtp.ethereal.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-ethereal-username
SMTP_PASS=your-ethereal-password

# For Production (Replace with your commercial SMTP provider)
# NODE_ENV=production
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=465
# SMTP_SECURE=true
# SMTP_USER=your-production-smtp-user
# SMTP_PASS=your-production-smtp-password

