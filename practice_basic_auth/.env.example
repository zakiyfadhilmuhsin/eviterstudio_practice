# Mailgun SMTP:
# SMTP_HOST=smtp.mailgun.org
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-mailgun-smtp-user
# SMTP_PASS=your-mailgun-smtp-password

# =============================================
# SECURITY CONFIGURATION
# =============================================

# Account Lockout Settings
LOCKOUT_MAX_ATTEMPTS=5
LOCKOUT_DURATION=900000           # 15 minutes in milliseconds
LOCKOUT_ATTEMPT_WINDOW=300000     # 5 minutes in milliseconds
LOCKOUT_PROGRESSIVE=true          # Enable progressive lockout

# Rate Limiting Configuration
# Global rate limits
THROTTLE_TTL=60000               # 1 minute in milliseconds
THROTTLE_LIMIT=100               # 100 requests per minute

# Authentication endpoint rate limits
THROTTLE_AUTH_TTL=60000          # 1 minute in milliseconds
THROTTLE_AUTH_LIMIT=10           # 10 auth requests per minute

# Strict rate limits (for sensitive operations)
THROTTLE_STRICT_TTL=300000       # 5 minutes in milliseconds
THROTTLE_STRICT_LIMIT=3          # 3 requests per 5 minutes

# Custom rate limits by endpoint type
RATE_LIMIT_GLOBAL_WINDOW=60000   # Global: 1 minute window
RATE_LIMIT_GLOBAL_MAX=100        # Global: 100 requests max

RATE_LIMIT_AUTH_WINDOW=60000     # Auth: 1 minute window
RATE_LIMIT_AUTH_MAX=10           # Auth: 10 requests max

RATE_LIMIT_LOGIN_WINDOW=60000    # Login: 1 minute window
RATE_LIMIT_LOGIN_MAX=5           # Login: 5 attempts max

RATE_LIMIT_REGISTER_WINDOW=60000 # Register: 1 minute window
RATE_LIMIT_REGISTER_MAX=3        # Register: 3 attempts max

RATE_LIMIT_PASSWORD_WINDOW=300000 # Password: 5 minutes window
RATE_LIMIT_PASSWORD_MAX=3        # Password: 3 requests max

RATE_LIMIT_SENSITIVE_WINDOW=300000 # Sensitive: 5 minutes window
RATE_LIMIT_SENSITIVE_MAX=2       # Sensitive: 2 requests max

# Security Monitoring
SECURITY_MONITORING_ENABLED=true
SECURITY_ALERT_WEBHOOK_URL=      # Optional: webhook for security alerts
SECURITY_LOG_LEVEL=warn          # Log level for security events (error, warn, info)